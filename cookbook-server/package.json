{
  "name": "cookbook-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "(cd static && npm install)",
    "build": "tsc --build && tsc --project static/ts",
    "start": "cross-env NODE_ENV=production node .",
    "dev:server:tsc": "concurrently -n watch:server,watch:static \"tsc --build -w\" \"tsc --project static/ts -w\"",
    "dev:server:nodemon": "nodemon .",
    "dev:server:watches": "concurrently \"npm:dev:server:tsc\" \"npm:dev:server:nodemon\"",
    "test:tdd": "cross-env NODE_ENV=test mocha --require ts-node/register --ui tdd ./test/tdd/*.ts",
    "test:bdd": "cross-env NODE_ENV=test mocha --require ts-node/register --ui bdd ./test/bdd/*.ts",
    "test": "cross-env NODE_ENV=test npm run test:tdd && npm run test:bdd",
    "clean": "tsc --build --clean && (cd static && npm run clean)"
  },
  "nodemonConfig": {
    "ext": "js"
  },
  "author": "Marica Pasquali",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.9",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.3",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "swagger-ui-express": "^4.3.0",
    "uuidv4": "^6.2.12",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.33",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
