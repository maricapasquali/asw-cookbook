{
  "name": "asw-cookbook",
  "version": "1.0.0",
  "description": "CookBook is a web app for those who love to cook and/or eat healthy.\r The platform aims to offer the exchange of recipes (traditional or customized) of all sorts of food (appetizers, first courses, main courses, desserts, drinks, condiments, ...)\r ## Requirements\r - docker-compose",
  "scripts": {
    "build": "npm run build -ws --if-present",
    "start:server": "npm start -w cookbook-server",
    "start:client": "npm start -w cookbook-app",
    "dev:shared": "npm run dev:shared:watches -w cookbook-shared",
    "dev:server": "npm run dev:server:watches -w cookbook-server",
    "dev:client": "npm run dev:client:watches -w cookbook-app",
    "test" : "npm run test -ws --if-present",
    "clean" : "npm run clean -ws --if-present"
  },
  "workspaces": [
    "cookbook-shared",
    "cookbook-server",
    "cookbook-app"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maricapasquali/asw-cookbook.git"
  },
  "author": "Marica Pasquali",
